{% extends "IntractoSecretSantaBundle::base.html.twig" %}
{% block main %}
    <div class="box">
        <h2>{{ 'static-faq.title'|trans }}</h2>
        {{ 'static-faq.body'|trans(
            {
                '%requestForgotLink%': path('forgot_url'),
                '%requestReuseLink%': path('request_reuse_url'),
                '%contactLink%': path('contact'),
            }
        )|raw }}

        <p><a href="{{ url('homepage') }}" class="btn btn-large btn-primary">{{ 'static-faq.create_new_list'|trans }}</a>
        </p>
    </div>
{% endblock %}
