{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
        <tr>
            <td width="37" align="left">
            </td>
            <td width="566">
                <p>{{ 'emails-updated_party.message.html'|trans({"%name%": participant.name, "%owner%": participant.party.getOwnerName})|raw }}</p>
                <table cellspacing="0" cellpadding="3" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
                    <thead>
                        <tr>
                            <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-updated_party.label.date_party'|trans }}</th>
                            <th style="border-bottom: 1px solid #000;">&nbsp;</th>
                            <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-updated_party.label.location'|trans }}</th>
                            <th style="border-bottom: 1px solid #000;">&nbsp;</th>
                            <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-updated_party.label.amount_to_spend'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ participant.party.eventdate|date('d M y') }}</td>
                            <td>&nbsp;</td>
                            <td>{{ participant.party.location }}</td>
                            <td>&nbsp;</td>
                            <td>{{ participant.party.amount }}</td>
                        </tr>
                    </tbody>
                </table>
                <table class="button">
                    <tr>
                        <td align="center" width="auto" bgcolor="#bd1019" style="padding-top: 14px; padding-right: 80px; padding-bottom: 14px; padding-left: 80px;
                        background: #bd1019; -webkit-box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2); -moz-box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
                        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2); -moz-border-radius: 6px; -webkit-border-radius: 6px; border-radius: 6px; color: #fff; border: solid 1px #5b1b1c;
                        font-size: 14px; font-weight: normal; text-decoration: none; display: block;" class="buttonTop">

                            <a href="{{ url('participant_view', { 'url': participant.url, '_locale': participant.party.locale }) }}" style="color: #FFF; text-decoration: none; font-family: Helvetica, Arial,
                             sans-serif; vertical-align: baseline;">{{ 'emails-updated_party.btn.updated_party'|trans|raw }}</a>

                        </td>
                    </tr>
                    <tr>
                        <td width="auto" style="display: block; font-size: 16px;" class="buttonBottom">&nbsp;</td>
                    </tr>
                </table>
            </td>
            <td width="37" align="right">
            </td>
        </tr>

    </table>
{% endblock %}
